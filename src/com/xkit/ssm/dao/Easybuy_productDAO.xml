<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xkit.ssm.dao.Easybuy_productDAO">
    <select id="qureyAllproduct" resultType="Easybuy_product">
        SELECT * FROM `easybuy_product`
    </select>
    
    <select id="record" resultType="Integer">
        select count(*) from `easybuy_product`
    </select>
    
    <select id="qureyProductLimit" resultType="Easybuy_product">
        SELECT * FROM `easybuy_product` LIMIT #{pageIndex},#{pageSize};
    </select>
</mapper>